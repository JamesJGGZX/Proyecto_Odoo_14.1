<?xml version="1.0"?>
<odoo>
    <!-- Vista lista (tree) -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <tree string="List Tree">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags"/> <!-- Campo oculto -->
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="1"/> 
            </tree>
        </field>
    </record>

    <!-- Vista formulario (form) -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <form string="Form">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold,canceled"/>
                    <button name="cancel_property" string="Cancel" type="object" groups="base.group_user"/>
                    <button name="sold_property" string="Sold" type="object" groups="base.group_user"/>
                    <!-- <button name="accept_offer" string="Accept" type="object" class="btn-primary"/>
                    <button name="reject_offer" string="Decline" type="object" class="btn-secondary"/> -->
                </header>
                <sheet>
                    <field name="name" widget="char" style="font-size: 30px; text-align: left; margin-top: 5px;"/>
                    <separator/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_edit_color': False}"/>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True}"/> 
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                        </group>
                        <notebook>
                            <page string="Description" style="border-top: 1px solid #000000; height: 100%; margin-top: 10px;">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" attrs="{'invisible': [('garden','=',False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden','=',False)]}"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Other Info" style="border-top: 1px solid #000000; height: 100%; margin-top: 10px;">
                                <group>
                                    <field name="seller_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                            <page string="Offers" style="border-top: 1px solid #000000; height: 100%; margin-top: 10px;">
                                <field name="offer_ids">
                                    <tree editable="top">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <field name="status" string="Status" attrs="{'invisible': [('status', 'not in', ['accepted', 'refused'])]}"/>
                                        <button name="accept_offer" status="accepted" type="object" icon="fa-check" groups="base.group_user"/>
                                        <button name="reject_offer" status="refused" type="object" icon="fa-times"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de busquedas (search) -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/> 
                <separator/>
                    <filter string="Available" name="date_availability" domain="[('state', '=', 'new'),('state','=','offer received')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    </group>
            </search>
        </field>
    </record>

</odoo>